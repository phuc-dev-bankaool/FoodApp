<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Hình ảnh món ăn -->
        <ImageView
            android:id="@+id/cartFoodImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_food_image" />

        <!-- Thông tin món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Tên món ăn -->
            <TextView
                android:id="@+id/cartFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Giá món ăn -->
            <TextView
                android:id="@+id/cartFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 $"
                android:textSize="14sp" />

            <!-- Số lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/buttonDecrease"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:background="@drawable/ic_decrease"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/cartQuantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/buttonIncrease"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:background="@drawable/ic_increase"
                    android:layout_gravity="center_vertical"
                    app:tint="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Nút xóa -->
        <ImageButton
            android:id="@+id/buttonRemoveFromCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_delete"
            android:contentDescription="Remove from cart" />

    </LinearLayout>
</androidx.cardview.widget.CardView>